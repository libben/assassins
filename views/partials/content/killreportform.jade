form.form-inline(action='/#{game_id}/report',method='post')
  .form-group
    label Your ID
    input.form-control(type='password',name='killer_key')
    label Target's ID
    input.form-control(type='password',name='target_key')
    label Method of Death
    label
      input.form-control(type='radio',name='kill_method',checked,value='spoon')
      | Spoon
    label
      input.form-control(type='radio',name='kill_method',value='sock')
      | Sock Attack
    label
      input.form-control(type='radio',name='kill_method',value='killword')
      | Killword
    label
      input.form-control(type='radio',name='kill_method',value='bomb')
      | Bomb
    label
      input.form-control(type='radio',name='kill_method',value='poison')
      | Poison
  input(type='submit',class='btn btn-default',value='Submit')
